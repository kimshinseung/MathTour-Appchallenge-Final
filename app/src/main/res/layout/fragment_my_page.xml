<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_rect4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/score">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="70dp"
                android:fontFamily="@font/font1"
                android:text="완주 코스"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/step_btn"
                android:layout_width="69sp"
                android:layout_height="64sp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/round_rect5"
                android:fontFamily="@font/font1"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                tools:text="0" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/font1"
                android:text="걸음 수"
                android:textSize="23sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/course_btn"
                android:layout_width="69sp"
                android:layout_height="64sp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="70dp"
                android:background="@drawable/round_rect5"
                android:fontFamily="@font/font1"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:text="0/17" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/score"
            android:layout_width="100sp"
            android:layout_height="34dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="94dp"
            android:background="@drawable/border_stroke"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100sp"
            android:layout_height="34dp"
            android:layout_marginStart="94dp"
            android:layout_marginTop="36dp"
            android:background="#eff3f7"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="내가 푼 문제 수"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="1코스) 서울 경복궁"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="2코스) 전주 한옥마을"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/three"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="3코스) 세종 호수공원"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/four"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="4코스) 서산 가야산"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/five"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="5코스) 전남 다산초당"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/six"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="6코스) 광주 무등산"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/seven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="7코스) 통영 해상국립공원"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/eight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="8코스) 부산 이바구길"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/nine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="9코스) 울산 주상절리"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/ten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="10코스) 영주 부석사"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/eleven"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="11코스) 대구 근대골목"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/twelve"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="12코스) 춘천 의암호"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/thirtin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="13코스) 충북 산막이 옛길"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/fourtin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="14코스) 수원 화성"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/fivetin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="15코스) 제주 용머리해안"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/sixtin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="16코스) 강원 경포대"
                        android:textSize="18sp" />

                    <RadioButton
                        android:id="@+id/seventin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/font1"
                        android:text="17코스) 태안 해식동굴"
                        android:textSize="18sp" />

                </RadioGroup>

            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>